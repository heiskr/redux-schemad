{
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "globals": {
    "expect": true,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "max-depth": ["error", 4],
    "max-lines": ["error", 1000],
    "max-params": ["error", 4],
    "max-statements": ["error", 20],
    "no-negated-condition": "error",
    "complexity": ["error", 10],
    "no-useless-call": "error",
    "object-shorthand": ["error", "always"],
    "no-param-reassign": "off",
    "no-underscore-dangle": "off"
  }
}
